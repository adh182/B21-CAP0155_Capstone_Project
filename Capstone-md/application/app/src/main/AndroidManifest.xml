<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cendekia.capstone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Capstone">
        <activity
            android:name=".ui.splashscreen.SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.ResultPredictionActivity" />
        <activity android:name=".ui.main.ResetPasswordActivity" />
        <activity android:name=".ui.main.HomeActivity" />
        <activity android:name=".ui.main.RegisterActivity" />
        <activity android:name=".ui.mitigation.MitigationActivity" />
        <activity android:name=".ui.warning.WarningActivity" />
        <activity android:name=".ui.main.LoginActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>